<ol class="breadcrumb">
  <li><a href="<%= mails.root_path %>"><%= t('mails.nav.home') %></a></li>
  <li><a href="<%= mails.messages_path %>"><%= t('mails.nav.pm') %></a></li>
  <li class="active"><%= t('mails.new') %></li>
</ol>


<%= form_for(@item) do |f| %>
  <%= render_errors @item %>
  <div class="form-group">
    <%= f.label :receiver_id %>
    <%= f.select :receiver_id, Mails.config.user_class.constantize.all.collect { |n| [n.send(Mails.config.user_name_method), n.id] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: "10" %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-lg" data-disable-with="<%= t('mails.submiting') %>"><%= t('mails.submit') %></button>
    <a href="<%= mails.messages_path %>" class="btn btn-lg btn-default"><%= t('mails.cancel') %></a>
  </div>
<% end %>
